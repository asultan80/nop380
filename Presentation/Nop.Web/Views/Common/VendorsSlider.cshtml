@model VendorsSliderModel
@using Nop.Web.Models.Common;

<div>
    @foreach (var vendor in Model.VendorsList)
    {
        <div style="float: left; background-color: #dcdcdc; padding: 5px 10px; margin: 0 10px;">
            <a href="@Url.RouteUrl("Vendor", new {SeName = vendor.SeName})">
                <img src="@vendor.PictureModel.ImageUrl" alt="@vendor.PictureModel.AlternateText" title="@vendor.PictureModel.Title" style="max-width: 100px;" />
            </a>
        </div>        
    }
</div>