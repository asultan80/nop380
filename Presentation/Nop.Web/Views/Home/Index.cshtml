@model IList<VendorModel>
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    //Html.AddTitleParts(T("PageTitle.Vendors").Text);
    Html.AddTitleParts("eCommerce delivery");
    //page class
    Html.AppendPageCssClassParts("html-vendor-list-page");
}
@using Nop.Web.Models.Catalog;
<div class="page vendor-list-page">
    <div class="header-girl"></div>
    <div class="page-body">
        <div class="vendor-grid">
            <div class="item-grid">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        <div class="vendor-item">
                            <h2 class="title">
                                <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h2>
                            <div class="picture">
                                <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="banner">
            <div class="banner-link green"><span class="green-text">When shopping for 3000</span> <span class="green-gift">package as a gift!!!!</span></div>
            <div class="banner-link yellow"><span class="yellow-text">Put like and you</span> <span class="yellow-win">win !!!</span></div>
            <div class="banner-link red"><span class="red-text">3 each delivery - </span> <span class="red-free">free of charge!</span></div>
            <div class="clear"></div>
            <div class="banner-sale red">your ads can be here</div>
        </div>
    </div>
</div>
